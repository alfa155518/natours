header.header 
  nav(class='nav nav--tours')
    a(href="/" class='nav__el') All tours
  div(class='header__logo')
    img(src='/img/logo-white.png' alt="Natours logo" )
  nav(class='nav nav--user')
    if user 
      a(class='nav__el nav__el--logout') Log out
      a(href="/me" class='nav__el')
        img(class='nav__user-img' src=`/img/users/${user.photo}` alt="User photo")
        span= user.name.split(' ')[0]
    else
      a(class='nav__el nav__el--cta' href="/login") Log in
      a(class='nav__el nav__el--cta' href="#") Sign up